@model Veterinaria.Web.Models.Owner

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div class="bg-white container">
    <br />
    <div class="masthead bg-white">
        <div class="masthead-content space">
            <br />
            <div class="card container border-dark" style="width:40rem">
                @using (Html.BeginForm("Edit", "Owners", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <br />
                    <div class="card-header bg-primary"></div>
                    <br />
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal text-black-50 container">
                        <center>  <img src="~/Content/img/logo.jpg" alt="Alternate Text" width="200" height="150" /></center>
                        <h4 class="text-center"><b>Registra los datos del Dueño</b></h4>
                        <p class="text-center">Ingresa en los campos los datos necesarios para el registro.</p>
                        <br />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <center>

                            <br />
                            <div class="form-group" align="center">
                                <div class="col-md-offset-2 col-md-12">

                                    <input type="submit" value="Guardar Cambios" class="btn btn-outline-success btn-lg btn-block col-md-12" />
                                    @Html.ActionLink("Volver a la Lista", "Index", "Owners", null, new { @class = "btn btn-danger btn-lg btn-block" })

                                </div>
                            </div>
                        </center>
                    </div>
                }
                <div class="card-footer bg-primary"></div>
                <br />
            </div>
        </div>
        <br />
    </div>

</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
