@model Veterinaria.Web.Models.Pet

@{
    ViewBag.Title = "Details";
}

<div class="bg-white container">
    <br />
    <div class="masthead bg-white">
        <div class="masthead-content space">
            <br />
            <div class="card container border-dark text-lg-center" style="width:30rem">
                <div>
                    <br />
                    <div class="card-header bg-primary text-black-50"></div>

                    <dl class="dl-horizontal text-black-50 container">
                        <center>  <img src="~/Content/img/logo.jpg" alt="Alternate Text" width="200" height="150" /></center>
                        <h2 class="text-center"><b>Perfil de la Mascota</b></h2>
                        <p></p>
                        <p></p>
                        <dt>
                            <b>Nombre de la mascota:</b>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt>
                            <b>Tipo de mascota:</b>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.PetType)
                        </dd>

                        <dt>
                            <b>Edad de la mascota:</b>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Age)
                        </dd>

                        <dt>
                            <b>Fecha de Nacimiento:</b>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.BirthDate)
                        </dd>

                        <dt>
                            <b>Color de pelaje:</b>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Color)
                        </dd>

                        <dt>
                            <b>Raza de la mascota:</b>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Race)
                        </dd>

                        <dt>
                            <b>Peso de la mascota:</b>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Weight)
                        </dd>

                        <dt>
                            <b>Altura de la mascota:</b>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Height)
                        </dd>

                        <br />
                        <p>
                            @Html.ActionLink("Modificar Datos", "Edit", new { id = Model.Id }, new { @class = "btn btn-lg btn-outline-warning btn-block" })
                            @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-lg btn-danger btn-block" })
                        </p>
                    </dl>
                    <div class="card-footer bg-primary text-black-50" </div>

                </div>
                <br />
            </div>

        </div>
    </div>
</div>
</div>